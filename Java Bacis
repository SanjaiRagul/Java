to add the first and last number

import java.util.*;
public class Main
{
    public static void main(String[] args){
        int a= 1234;
        if(a>999 && a<10000){
            int f = a%10;
            int l = a/1000;
            System.out.println(f+l);
        }
        else System.out.println("Invalid");
       
    }
}
********************************************************************************************************************************************************************
// to add the sum of single digits
import java.util.*;
public class Main
{
	public static void main(String[] args) {
		int n=12345;
		while(n>=10) {
			int sum=0;
			while(n>0) {
				sum+=n%10;
				n/=10;
			}
			n=sum;
		}
		System.out.println(n);
// others method
        if(n<=9) System.out.println(n);
        else if(n%9==0) System.out.println("9");
        else System.out.println(n%9);
	}
}

